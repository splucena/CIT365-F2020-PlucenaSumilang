@page "{searchString?}"
@model MyScriptureJournal.Pages.IndexModel

@{
    ViewData["Title"] = "Scripture Journal Entries";
}

<h1>CREATE</h1>

<p>
    <a asp-page="Create">Create New Scripture Journal Entry</a>
</p>

<form>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Search by Book | Note:</span>
        </div>
        <input type="text" asp-for="SearchString" />
        <div class="input-group-append">
            <button type="submit" value="Search" class="btn btn-primary"><i class="fas fa-search"></i> Search</button>
        </div>
        <div class="input-group-append">
            <a asp-page="Index" class="btn btn-primary"><i class="fas fa-backward"></i> Back to full List</a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort">
                    @Html.DisplayNameFor(model => model.ScriptureJournal[0].Book)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournal[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournal[0].Verse)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateAddedSort">
                    @Html.DisplayNameFor(model => model.ScriptureJournal[0].DateAdded)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournal[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ScriptureJournal)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chapter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Verse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
