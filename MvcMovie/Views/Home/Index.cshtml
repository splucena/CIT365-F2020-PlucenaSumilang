@model IEnumerable<MvcMovie.Models.Movie>


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center home-container">
    <h1 class="display-4">LDS Movies</h1>
    <p>...If there is anything virtuous, lovely, or of good report or [praiseworthy,] we seek after these things.</p>
    <a asp-controller="Movies" asp-action="Index" class="btn btn-primary"> Movies</a>
</div>
<div class="container" style="margin: 0 auto; width: 30%;">   
    <div id="carouselExampleIndicators" class="carousel slide text-center" data-ride="carousel" >
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner text-center">
            @{ var ctr = 1;}
            @foreach (var item in Model)
            {

                var photoPath = "~/images/" + (item.PhotoPath ?? "noimage.jpg");

                if (ctr == 1)
                {
                    <div class="carousel-item active">
                        <img src="@photoPath" asp-append-version="true" class="d-block w-100 border" style="height: 350px;" alt="Chicago">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="@photoPath" asp-append-version="true" class="d-block w-100 border" style="height: 350px;" alt="Chicago">
                    </div>
                }

                ctr += 1;
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
